{
  "name": "reend-components",
  "version": "0.2.0",
  "private": false,
  "description": "Tactical, sci-fi, and gaming-inspired React component library â€” Arknights: Endfield Design System",
  "type": "module",
  "main": "./dist/lib/index.cjs",
  "module": "./dist/lib/index.mjs",
  "types": "./dist/lib/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/lib/index.d.ts",
        "default": "./dist/lib/index.mjs"
      },
      "require": {
        "types": "./dist/lib/index.d.ts",
        "default": "./dist/lib/index.cjs"
      }
    },
    "./styles.css": "./dist/lib/style.css",
    "./variables.css": "./src/styles/variables.css",
    "./tailwind": {
      "import": "./src/tailwind-preset.ts",
      "require": "./src/tailwind-preset.ts"
    }
  },
  "files": [
    "dist/lib",
    "src/styles",
    "src/tailwind-preset.ts",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "license": "MIT",
  "author": "VBeatDead (https://github.com/VBeatDead)",
  "repository": {
    "type": "git",
    "url": "https://github.com/VBeatDead/ReEnd-Components.git"
  },
  "bugs": {
    "url": "https://github.com/VBeatDead/ReEnd-Components/issues"
  },
  "homepage": "https://reend-components.pages.dev",
  "keywords": [
    "react",
    "components",
    "ui",
    "tailwindcss",
    "design-system",
    "arknights",
    "endfield",
    "typescript",
    "radix-ui",
    "sci-fi",
    "dark-theme",
    "gaming",
    "dashboard",
    "hud"
  ],
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "framer-motion": ">=10.0.0",
    "lucide-react": ">=0.400.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": true
    },
    "framer-motion": {
      "optional": true
    },
    "lucide-react": {
      "optional": true
    }
  },
  "scripts": {
    "dev": "vite",
    "prebuild": "node --experimental-strip-types scripts/generate-llms.ts",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "build:lib": "vite build --config vite.lib.config.ts",
    "prepublishOnly": "npm run build:lib",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-tooltip": "^1.2.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "sonner": "^1.7.4",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^22.16.5",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "framer-motion": "^12.34.0",
    "fuse.js": "^7.1.0",
    "globals": "^15.15.0",
    "i18next": "^25.8.10",
    "i18next-browser-languagedetector": "^8.2.1",
    "jsdom": "^20.0.3",
    "lucide-react": "^0.462.0",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^6.1.1",
    "react-i18next": "^16.5.4",
    "react-router-dom": "^6.30.1",
    "shiki": "^3.22.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^5.4.19",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  }
}
